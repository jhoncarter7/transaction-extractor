{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "rootDir": "./src",
        "declaration": false,
        "declarationMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "src/__tests__",
        "src/__tests__/**",
        "src/scripts"
    ]
}